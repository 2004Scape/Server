{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "#3rdparty/*": ["src/3rdparty/*"],
      "#jagex2/*": ["src/jagex2/*"],
      "#lostcity/*": ["src/lostcity/*"]
    },
    "types": ["node", "vitest/globals"],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowUnreachableCode": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"],
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
