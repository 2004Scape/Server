[proc,inv_remove_leading_empty_slots](inv $inv)
def_int $slot = 0;
while ($slot < inv_size($inv)) {
    if (inv_getobj($inv, $slot) ! null) {
        inv_movefromslot($inv, $inv, $slot);
    }
    $slot = add($slot, 1);
}

