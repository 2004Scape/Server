[opnpc1,npc_953] @tut_banker;
[apnpc1,npc_953]
if (npc_range(coord) > 2) {
    p_aprange(2);
    return;
}
@tut_banker;

[label,tut_banker]
~chatnpc(quiz, "Good day, would you like to access your bank account?");
@multi2(
    "Yes.", tut_open_bank,
    "No thanks.", banker_no_thanks
);

[label,tut_open_bank]
if (%tutorial_progress = ^tutorial_open_banking) {
    %tutorial_progress = ^tutorial_opened_bank;
    inv_add(bank, coins, 25);
    ~set_tutorial_progress;
}
@openbank;

[label,banker_no_thanks]
~chatplayer(neutral, "No thanks.");