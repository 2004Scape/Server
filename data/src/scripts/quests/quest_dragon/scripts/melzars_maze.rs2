[label,open_melzar_maze_door](obj $key)
 if (last_useitem = $key) {
    mes("The key disintegrates as it unlocks the door."); // osrs
    inv_del(inv, $key, 1);
    ~open_and_close_door(loc_1535, ~check_axis_locactive(coord), false);
} else {
    ~displaymessage(^dm_default); // osrs
}

