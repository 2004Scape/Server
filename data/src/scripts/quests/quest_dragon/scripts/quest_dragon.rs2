[queue,dragon_complete]
p_teleport(0_44_150_30_36);
%dragon_progress = ^dragon_complete;
givexp(strength, 186500);
givexp(defence, 186500);
~send_quest_complete(quest_journal:dragon, rune_platebody, 220, 2, "You have completed the\\nDragon Slayer Quest!");