[opnpc1,local]
switch_int(%arena_progress) {
    case ^arena_entered_ogre_fight:
        ~chatplayer(neutral, "Hello.");
        if(inv_total(worn, khazard_helmet) > 0 & inv_total(worn, khazard_armour) > 0) {
            ~chatnpc(happy, "Hello stranger. Khazard's got some great fights lined up this week. I can't wait.");
            return;
        }
        ~chatnpc(sad, "Please, I havn't done anything");
        ~chatplayer(confused, "What?");
        ~chatnpc(sad, "I love General Khazard, please believe me.");
    case ^arena_started, ^arena_obtained_armour, ^arena_spoken_drunkguard, ^arena_given_khali_brew:
        // mesanims from rs3, lines up with this fortunately: https://web.archive.org/web/20051025134523im_/http://runeweb.net/rathofdoom/quests/fightarena/2.png
        ~chatplayer(neutral, "Hello.");
        if(inv_total(worn, khazard_helmet) > 0 & inv_total(worn, khazard_armour) > 0) {
            ~chatnpc(happy, "I heard the Servil family are fighting soon. Should be very entertaining.");
            return;
        }
        ~chatnpc(quiz, "Hello stranger, are you new to these parts?");
        ~chatplayer(neutral, "I suppose I am.");
        ~chatnpc(angry, "What's your business?");
        ~chatplayer(neutral, "Just visiting friends in the cells.");
        ~chatnpc(happy, "Visiting, that's funny.");
        ~chatnpc(angry, "Only Khazard guards are allowed to see prisoners. Unless you know where to get some Khazard armour, you won't be visiting anyone.");
    case ^arena_not_started:
        ~chatplayer(neutral, "Hello.");
        ~chatnpc(quiz, "Hello stranger, are you new to these parts?|You look lost.");
        ~chatnpc(happy, "I suppose you're here for the fight arena?|There are some rich folk fighting tomorrow.|Should be entertaining.");
}