[opnpc1,justin_servil]
switch_int(%arena_progress) {
    case ^arena_entered_ogre_fight:
        ~chatplayer(angry, "Lady Servil sent me to rescue you and your son. Come on, we have to get out of here.");
        ~chatnpc(sad, "I'm too old to fight. I'm afraid you'll have to kill that ogre by yourself.");
    case ^arena_defeated_ogre: 
        ~chatplayer(quiz, "Are you alright?");
        @justin_servil_saved;
    case ^arena_sent_jail:
        ~chatplayer(angry, "Don't worry, I'll get us out of here.");
        ~chatnpc(sad, "You've incurred the anger of Khazard yourself now. He won't let any of us go easily.");
        @arena_release_scorp;
    case ^arena_defeated_scorpion:
        ~chatplayer(angry, "Come on, we only have to fight a creature called bouncer now.");
        ~chatnpc(sad, "You may laugh, but the name of the General's 'pet' is feared by many in this land.");
        @arena_release_bouncer;
    case ^arena_defeated_bouncer: // guessed mesanims
        ~chatplayer(quiz, "What does Khazard want with us now?");
        ~chatnpc(sad, "I don't know, but I can't imagine he'll be happy with you now.");
        @general_khazard_agreement;
    case ^arena_freed_servils: // guessed mesanims
        ~chatplayer(neutral, "You can run, Khazard's interest is in me now.");
        ~chatnpc(neutral, "My thanks, we'll be ok now. I suggest you run too, General Khazard is mighty and his anger fearsome.");
    case ^arena_defeated_genkhazard: // guessed mesanims, dialogue from chisel
        ~chatplayer(neutral, "Khazard is dead, you can return to your wife.");
        ~chatnpc(neutral, "My thanks. But Khazard is not as easy to kill as you might think. I suggest that none of us remain here too long.");
}

[label,justin_servil_saved]
~chatnpc(happy, "You saved my life and my son's, I am eternally in your debt brave traveller.");
@khazard_welldone;