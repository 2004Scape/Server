[proc,npc_death]
npc_walk(npc_coord); // unnecessary but leaked screenshot of another script having this npc_walk + npc_setmode(none) stuff
npc_setmode(none);
npc_arrivedelay;
if (finduid(%npc_aggressive_player) = true) {
    if (npc_param(death_sound) ! null) {
        sound_synth(npc_param(death_sound), 0, 0);
    }
    %aggressive_npc = null;
}
npc_anim(npc_param(death_anim), 0);
npc_delay(2);
npc_del;
