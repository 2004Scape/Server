[proc,npc_death]
npc_arrivedelay;
npc_setmode(none);
if (finduid(%npc_aggressive_player) = true) {
    if (npc_param(death_sound) ! null) {
        sound_synth(npc_param(death_sound), 0, 0);
    }
}
if (npc_findhero = true){
    %aggressive_npc = null;
    %lastcombat = null;
}
npc_delay(0);
npc_anim(npc_param(death_anim), 0);
npc_delay(npc_param(deathanim_delay));
npc_del;
