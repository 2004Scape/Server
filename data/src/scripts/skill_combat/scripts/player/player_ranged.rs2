    world_delay(calc($delay / 30));
    obj_add(npc_coord, iron_arrow, 1, 200);
}*/

[proc,player_ranged_shoot_arrow](obj $quiver)(int)
def_int $delay = calc((npc_range(coord) * 5) + 46);
//Move projectile at 10 square per second -> something like that
def_int $duration = calc(46 + (npc_range(coord) * 10));
spotanim_pl(oc_param($quiver, arrow_launch), 96, 0);
map_projanim_npc(coord, npc_uid, oc_param($quiver, arrow_travel), 40, 36, $delay, $duration, 11, 15, 5);
inv_del(worn, $quiver, 1);
return($delay);
