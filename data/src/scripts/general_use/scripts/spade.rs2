[opheld1,spade]
// Treasure Trails
if(~trail_hasclue_inv = true) {
    def_namedobj $clue = ~trail_getclue_inv;
    if(~trail_clue_coord($clue) = true) {
        if(oc_param($clue, trail_coord) = coord) {
            mes("TRAIL DEBUG: Correct coordinate for clue.");
            return;
        } else {
            mes("wrong spot");
        }
    } else {
        mes("no coord clue");
    }
} else {
    def_int $option = random(3);

    if($option = 0) {
        mes("TRAIL DEBUG: Easy clue added.");
        ~trail_geteasyclue;
    } else if($option = 1) {
        mes("TRAIL DEBUG: Medium clue added.");
        ~trail_getmediumclue;
    } else if($option = 2) {
        mes("TRAIL DEBUG: Hard clue added.");
        ~trail_gethardclue;
    }
}

@nothing_interesting_happens;