// Pickable Potatoes
[oploc2,loc_312]
p_arrivedelay;
if(inv_freespace(inv) = 0) {
    mes("You don't have room for this potato.");
    p_teleport(loc_coord);
    p_delay(0);
} else {
    ~pickup_loc_floor(loc_coord, potato, 50, true);
    mes("You pick a potato.");
}

