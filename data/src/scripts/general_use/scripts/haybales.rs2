[label,search_haybale]()
anim(human_pickupfloor, 0);
p_delay(2);
def_int $rand = random(100);
if ($rand < 2) {
    ~damage_self(1);
} else if ($rand < 12) {
    ~chatplayer("<p,quiz>Wow! A needle!|Now what are the chances of finding that?");
    inv_add(inv, needle, 1);
} else {
    mes("You find nothing of interest.");
}