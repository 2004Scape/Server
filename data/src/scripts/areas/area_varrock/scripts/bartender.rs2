[opnpc1,bartender_varrock]
//Treasure Trails
if(inv_total(inv, trail_clue_easy_simple_exp010) = 1) {
    ~chatnpc(happy, "Nicely solved!");
    ~trail_clue_easy_progress(trail_clue_easy_simple_exp010, false);
    return;
}


[proc,trail_bartender_varrock]
~chatnpc("default", "Nicely solved!");
%trail_easy_steps_completed = calc(%trail_easy_steps_completed + 1);
inv_del(inv, trail_clue_easy_simple_exp010, 1);
if(~trail_clue_easy_complete = true) {
    inv_add(inv, trail_casket_easy, 1);
    ~objbox(trail_casket_easy, 200, "You've obtained a casket!");
} else {
    inv_add(inv, ~trail_clue_easy_getrandom, 1);
    ~objbox(trail_clue_hard_map001, 200, "The bartender hands you another clue!");
}
