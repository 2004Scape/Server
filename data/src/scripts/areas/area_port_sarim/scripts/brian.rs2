[opnpc1,brian]
def_int $option = ~p_choice2("So, are you selling something?", 1, "'Ello.", 2);
if($option = 1) {
    ~chatplayer("<p,neutral>So, are you selling something?");
    ~chatnpc("<p,neutral>Yep, take a look at these great axes!");
    ~openshop_activenpc;
} else if($option = 2) {
    ~chatplayer("<p,neutral>'Ello.");
    ~chatnpc("<p,neutral>'Ello!");
}
