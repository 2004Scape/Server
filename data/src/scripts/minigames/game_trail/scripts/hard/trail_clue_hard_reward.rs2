[proc,trail_clue_hard_reward]
def_int $rolls = calc(4 + random(3));
def_int $roll = 0;
def_int $rare = 0;

while ($roll < $rolls) {
    // Rare drop chance was 1/13 in OSRS in 2019. @https://twitter.com/JagexTide/status/1131933683714330624
    // the chances have been scaled down over time to accomodate for more uniques being in the list, there are 25 uniques in May 2004
    // 133 by 2019, which is 5.32x more, 13 * 5.32 ~= 69
    if(random(69) = 0) {
        $rare = calc($rare + 1);
        gosub(trail_clue_hard_rare);
    } else {
        gosub(trail_clue_hard_normal);
    }
    $roll = calc($roll + 1);
}
if ($rare > 0) {
    session_log(^log_adventure, "Completed a Hard Clue Scroll and received <tostring($rare)> Rare Reward(s)!");
} else {
    session_log(^log_adventure, "Completed a Hard Clue Scroll.");
}
~trail_complete;

[proc,trail_clue_hard_normal]
def_int $random = random(20);

switch_int ($random) {
    case 0 : inv_add(reward, coins, calc(1000 + random(4001)));
    case 1 : inv_add(reward, cert_lobster, calc(12 + random(4)));
    case 2 : inv_add(reward, cert_shark, calc(12 + random(4)));
    case 3 : inv_add(reward, naturerune, calc(30 + random(21)));
    case 4 : inv_add(reward, lawrune, calc(30 + random(21)));
    case 5 : inv_add(reward, bloodrune, calc(20 + random(11)));
    case 6 : inv_add(reward, rune_full_helm, 1);
    case 7 : inv_add(reward, rune_platebody, 1);
    case 8 : inv_add(reward, rune_platelegs, 1);
    case 9 : inv_add(reward, rune_plateskirt, 1);
