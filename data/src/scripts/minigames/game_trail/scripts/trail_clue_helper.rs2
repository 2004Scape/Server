[proc,trail_hasclue_all](boolean)
def_int $slot = 0;

while ($slot < inv_size(inv)) {
    def_obj $slotobj = inv_getobj(inv, $slot);
    if(oc_category($slotobj) = trail_easy_clue | oc_category($slotobj) = trail_medium_clue | oc_category($slotobj) = trail_hard_clue) {
        return(true);
    }
    $slot = calc($slot + 1);
}
