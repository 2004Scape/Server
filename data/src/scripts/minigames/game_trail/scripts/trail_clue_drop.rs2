[proc,trail_geteasyclue](boolean)
if(~trail_hasclue_all = false) {
    def_namedobj $trail_clue_easy = enum(int, namedobj, trail_easy_enum, random(enum_getoutputcount(trail_easy_enum)));
    inv_add(inv, $trail_clue_easy, 1);
    return(true);
} else {
    return(false);
}

