[proc,progress_clue_medium](obj $current_clue, string $text)
~trail_clue_progress;
inv_del(inv, $current_clue, 1);
if(~trail_clue_medium_complete = true) {
    ~trail_clue_medium_reward;
} else {
    def_namedobj $new_clue = ~trail_clue_medium_getrandom;
    inv_add(inv, $new_clue, 1);
    ~objboxt($new_clue, $text);
}

// Key drop
[proc,trail_checkmediumdrop]
// this was changed from black heather -> ardougne monks at some point, not sure when though
// https://www.neoseeker.com/runescape/faqs/125252-treasure-trail.html, https://web.archive.org/web/20040813233712/http://runehq.com/viewguidedb.php?id=00350
if(npc_type = black_heather & inv_total(inv, trail_clue_medium_riddle_exp001) > 0 & ~obj_gettotal(trail_clue_medium_key_exp001) = 0) {
    obj_add(npc_coord, trail_clue_medium_key_exp001, 1, ^lootdrop_duration);
} else if(npc_type = guard_dog & inv_total(inv, trail_clue_medium_riddle_exp002) > 0 & ~obj_gettotal(trail_clue_medium_key_exp002) = 0) {
    obj_add(npc_coord, trail_clue_medium_key_exp002, 1, ^lootdrop_duration);
} else if(npc_type = guard_ardougne & inv_total(inv, trail_clue_medium_riddle_exp003) > 0 & ~obj_gettotal(trail_clue_medium_key_exp003) = 0) {
    obj_add(npc_coord, trail_clue_medium_key_exp003, 1, ^lootdrop_duration);
} else if(npc_category = chicken & inv_total(inv, trail_clue_medium_riddle_exp004) > 0 & ~obj_gettotal(trail_clue_medium_key_exp004) = 0) {
    obj_add(npc_coord, trail_clue_medium_key_exp004, 1, ^lootdrop_duration);
} else if(compare(npc_name, "Man") = ^true & inv_total(inv, trail_clue_medium_riddle_exp005) > 0 & ~obj_gettotal(trail_clue_medium_key_exp005) = 0) {
    obj_add(npc_coord, trail_clue_medium_key_exp005, 1, ^lootdrop_duration);
}

