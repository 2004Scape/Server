[ai_queue3,_monk_of_zamorak](int $arg)
gosub(npc_death);
if (npc_findhero = false) {
    return;
}

// Default drop from config.
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

if (map_members = true) {
    def_int $random = random(20);

    if ($random < 1) {
        obj_add(npc_coord, obj_1033, 1, ^lootdrop_duration);
    } else if ($random < 2) {
        obj_add(npc_coord, obj_1035, 1, ^lootdrop_duration);
    }
}
