[ai_queue3,hobgoblin] // LVL 28 Hobgoblins
gosub(npc_death);
if (npc_findhero = false) {
    return;
}
// Default drop from config.
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

def_int $random = random(128);

if ($random < 3) {
    if (map_members = true) {
        obj_add(npc_coord, bronze_spear, 1, ^lootdrop_duration);
    } else {
        obj_add(npc_coord, goblin_mail, 1, ^lootdrop_duration);
    }
} else if ($random < 6) {
    obj_add(npc_coord, iron_dagger, 1, ^lootdrop_duration);
} else if ($random < 9) {
    obj_add(npc_coord, steel_dagger, 1, ^lootdrop_duration);
} else if ($random < 11) {
