<%- include('../_partial/header.ejs', { title: 'Create Account' }); %>

<%- include('../_components/frame-top.ejs'); %>
<%- include('../_components/content-start.ejs'); %>
<%- include('../_components/title-box.ejs', { title: 'Choose a Password' }); %>

<%- include('../_components/content-body-start-left.ejs'); %>

<br>

<center>
  <table cellspacing=1 cellpadding=2 border=0>
    <tr>
      <td style="background-color:382418;" height=26px;>Choose A Username</td>
      <td> > </td>
      <td style="background-color:382418;">Terms And Conditions</td>
      <td> > </td>
      <td style="background-color:382418;">
        <font color="#ffbb22">Choose A Password</font>
      </td>
      <td> > </td>
      <td style="background-color:382418;">Finish</td>
    </tr>
  </table>
</center>

<% if (typeof error !== 'undefined') { %>
  <p class="red">ERROR: <%= error %></p>
<% } %>

<ul>
  <li>
    <b>NEVER</b> give anyone your password.
  </li>
  <li>
    No one will ever ask you for your password. Your passwords are stored in a way that they cannot be retrieved or read back in plain text.
  </li>
  <li>
    Passwords may be between 5 and 20 characters long. We recommend you use a mixture of numbers and letters in your password to make it harder to guess.
  </li>
</ul>

<center>
  <table>
    <form method="post">
      <tr>
        <td align=right>Desired Username:</td>
        <td><%= username %> (<a href="/create?reset" class=c>Change</a>)</td>
        <input type="hidden" value="<%= username %>" name="username">
      </tr>
      <tr>
        <td align=right>Desired Password:</td>
        <td><input type="password" name="password" value="" minlength="5" maxlength="20" size="20"></td>
      </tr>
      <tr>
        <td align=right>Confirm Password:</td>
        <td><input type="password" name="password2" value="" minlength="5" maxlength="20" size="20"></td>
      </tr>
      <tr>
        <td>I agree with the terms and conditions:</td>
        <td><input type="checkbox" value="yes" name="terms" id="terms" required></td>
      </tr>
      <tr>
        <td></td>
        <td><input type="submit" value="Create Account"></td>
      </tr>
    </form>
  </table>
</center>

<%- include('../_components/content-body-end-left.ejs'); %>

<%- include('../_components/content-end.ejs'); %>
<%- include('../_partial/footer.ejs'); %>
