{
  "name": "2004scape",
  "version": "1.0.0",
  "type": "module",
  "imports": {
    "#3rdparty/*": "./src/3rdparty/*",
    "#/*": "./src/*",
    "#tools/*": "./tools/*"
  },
  "scripts": {
    "build": "tsx tools/cache/pack.ts",
    "bundle": "npm run bundle:esbuild",
    "bundle:bun": "bun bundle.js",
    "bundle:esbuild": "tsx bundle.js",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:schema": "prisma migrate dev",
    "dev": "tsx watch --clear-screen=false --include \"src/*\" src/app.ts",
    "lint": "eslint src",
    "lint:staged": "eslint",
    "precommit": "prettier . --write && eslint src --fix",
    "prepare": "husky",
    "quickstart": "tsx src/app.ts",
    "start": "npm i && tsx src/app.ts",
    "test": "vitest run ./src",
    "todo": "leasot src/ --skip-unsupported --exit-nicely"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,ts}": [
      "npm run lint:staged",
      "leasot --skip-unsupported --exit-nicely"
    ]
  },
  "dependencies": {
    "@jimp/js-png": "^1.6.0",
    "@jimp/plugin-quantize": "^1.6.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "jimp": "^1.6.0",
    "kleur": "^4.1.5",
    "kysely": "^0.27.4",
    "mysql2": "^3.11.4",
    "node-forge": "^1.3.1",
    "prom-client": "^15.1.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@2004scape/rsmod-pathfinder": "^5.0.4",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.1.13",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.9.0",
    "@types/node-forge": "^1.3.11",
    "@types/ws": "^8.5.13",
    "eslint": "^8.57.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "leasot": "^14.4.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "prisma": "^5.22.0",
    "prisma-kysely": "^1.8.0",
    "sort-package-json": "^2.10.1",
    "tinybench": "^3.0.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.4"
  },
  "prisma": {
    "seed": "tsx src/db/seed.ts"
  }
}
